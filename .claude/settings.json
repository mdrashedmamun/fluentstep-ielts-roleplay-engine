{
  "projectName": "FluentStep IELTS Roleplay Engine",
  "description": "Content extraction pipeline for educational dialogue scenarios",
  "phase": "Phase 7: Reusable Extraction Infrastructure",
  "documentation": "See .claude/README.md for full architecture, quality gates, and pipeline details",

  "agents": {
    "enabled": true,
    "directory": ".claude/agents",
    "subagents": [
      {
        "name": "pdf-extractor",
        "description": "Extract dialogue from educational PDF sources",
        "model": "sonnet",
        "tools": ["Read", "Bash", "Write", "Grep"],
        "context": "fork"
      },
      {
        "name": "blank-inserter",
        "description": "Convert dialogue to fill-in-the-blank format",
        "model": "sonnet",
        "tools": ["Read", "Write"],
        "context": "fork"
      },
      {
        "name": "content-validator",
        "description": "Run 7 linguistic validators with auto-fix",
        "model": "haiku",
        "tools": ["Read", "Bash"],
        "context": "fork"
      },
      {
        "name": "scenario-transformer",
        "description": "Convert validated dialogue to RoleplayScript code",
        "model": "sonnet",
        "tools": ["Read", "Write"],
        "context": "fork"
      },
      {
        "name": "orchestrator-qa",
        "description": "Coordinate extraction pipeline + enforce quality gates",
        "model": "opus",
        "tools": ["Read", "Bash", "Write", "Grep", "Glob"],
        "context": "default"
      },
      {
        "name": "scenario-creator",
        "description": "Interactive scenario creation with automatic validation",
        "model": "sonnet",
        "tools": ["Read", "Write", "Bash", "AskUserQuestion"],
        "context": "fork"
      },
      {
        "name": "learning-architect",
        "description": "Define learning outcomes (Cambridge methodology)",
        "model": "sonnet",
        "tools": ["Read", "Write"],
        "context": "fork"
      },
      {
        "name": "task-designer",
        "description": "Design roleplay tasks with communicative tension",
        "model": "sonnet",
        "tools": ["Read", "Write"],
        "context": "fork"
      },
      {
        "name": "chunk-curator",
        "description": "Validate core repertoire using corpus linguistics",
        "model": "haiku",
        "tools": ["Read", "Write", "Bash"],
        "context": "fork"
      },
      {
        "name": "system-builder",
        "description": "Implement scaffolding logic + blank placement",
        "model": "sonnet",
        "tools": ["Read", "Write"],
        "context": "fork"
      },
      {
        "name": "design-orchestrator",
        "description": "Coordinate all Cambridge design agents",
        "model": "opus",
        "tools": ["Read", "Write", "Bash"],
        "context": "default"
      }
    ]
  },

  "skills": {
    "enabled": true,
    "directory": "~/.claude/skills",
    "reusableSkills": [
      {
        "name": "extract-dialogue",
        "description": "Extract structured dialogue from PDFs or text",
        "usage": "/extract-dialogue [file-path] [options]"
      },
      {
        "name": "validate-scenario",
        "description": "Run all 7 linguistic validators on dialogue",
        "usage": "/validate-scenario [scenario-file] [options]"
      },
      {
        "name": "transform-content",
        "description": "Convert validated dialogue to RoleplayScript format",
        "usage": "/transform-content [input-file] [options]"
      }
    ]
  },

  "hooks": {
    "enabled": true,
    "directory": ".claude/hooks",
    "documentation": "See .claude/README.md#hooks--automation for full hook configuration",
    "PostToolUse": [
      {
        "name": "validate-output",
        "matcher": "Write",
        "triggers": ["staticData.ts", "services/*.ts"],
        "command": "./.claude/hooks/validate-output.sh",
        "blockOnFailure": true,
        "timeout": 60
      }
    ],
    "SessionStart": [
      {
        "name": "session-context",
        "command": "./.claude/hooks/session-start.sh",
        "blockOnFailure": false,
        "timeout": 10
      }
    ]
  },

  "npm-scripts": {
    "validate": "ts-node scripts/validateScenarios.ts",
    "build": "vite build",
    "audit": "ts-node cli/auditLanguage.ts",
    "dev": "vite"
  },

  "contacts": {
    "architect": "Claude Code - Phase 7 Implementation",
    "operationalOwner": "Orchestrator-QA Agent",
    "humanApprover": "Project Team Lead"
  },

  "lastUpdated": "2026-02-14",
  "version": "7.0-slim"
}
